    "type": "git",
    "url": "https://github.com/kumar529/ng2-fab-speed-dial.git"
  },
  "devDependencies": {
    "@angular/compiler": "^4.4.6",
    "@angular/compiler-cli": "^4.4.6",
    "@angular/core": "^4.4.6",
    "rollup": "^0.50.0",
    "rxjs": "^5.5.2",
    "typescript": "^2.5.3",
    "uglify-js": "^3.1.5"
  }
}
