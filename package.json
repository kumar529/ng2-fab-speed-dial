{
  "name": "ng2-fab-speed-dial",
  "version": "1.0.1",
  "author": "Rahul Kumar",
  "description": "Fab speed dial in for Angular 4+",
  "license": "MIT",
  "scripts": {
    "transpile": "ngc -p tsconfig.json",
    "package": "rollup -c",
